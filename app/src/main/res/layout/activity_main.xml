<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FF68FF00">

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="400dp"
		android:layout_gravity="center"
		android:background="@drawable/resources_2"
		android:padding="12dp"
		android:layout_marginTop="49dp">

		<EditText
			android:layout_width="wrap_content"
			android:ems="10"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:id="@+id/username"
			android:background="@drawable/resources"
			android:padding="10sp"
			android:hint="Enter Your Email"
			android:inputType="textEmailAddress"/>

		<EditText
			android:layout_width="wrap_content"
			android:inputType="textPassword"
			android:layout_height="wrap_content"
			android:ems="10"
			android:layout_below="@+id/username"
			android:layout_marginTop="23dp"
			android:id="@+id/password"
			android:background="@drawable/resources"
			android:padding="10sp"
			android:hint="Enter Your Password"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Login"
			android:id="@+id/login"
			android:layout_below="@+id/password"
			android:layout_centerInParent="true"
			android:layout_marginTop="20dp"
			android:background="@drawable/resources"
			android:onClick="login1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Create A New Account Register"
			android:layout_marginTop="7dp"
			android:layout_below="@+id/login"
			android:id="@+id/text"
			android:layout_centerInParent="true"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textAlignment="center"
			android:textColor="#FF0067FF"
			android:background="@drawable/resources"
			android:padding="20dp"
			android:typeface="serif"
			android:onClick="intent"/>

	</RelativeLayout>

	<FrameLayout
		android:layout_gravity="center"
		android:clipToPadding="true"
		android:layout_marginTop="20dp"
		android:layout_height="200dp"
		android:layout_width="300dp"
		android:id="@+id/frame"/>

</LinearLayout>

